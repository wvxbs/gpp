@model QuizzMVC.Models.Question

@{
    ViewBag.Title = "Quizz";
}

<h2>Quizz</h2>

<div>
    <h4>Question</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <div>
        @{
            using (@Html.BeginForm("ProcessUserInput", "Quizz"))
            {
                for (int i = 0; i < Model.Answers.Count; i++)
                {
                    @Html.RadioButton("Resposta", i);
                    @Html.Label(Model.Answers.ToArray()[i]);
                }

                <input type="submit" value="Avançar "/>
            }
        }
    </div>
</div>
